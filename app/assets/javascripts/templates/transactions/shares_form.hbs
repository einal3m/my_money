<td colspan="7">
  <div class="form-horizontal">
    <div class="row">
      <div class="form-group col-md-6">
        <label for="transaction_type_id" class="col-sm-4 col-md-4 control-label">Action</label>
        <div class="col-sm-10 col-md-6">
          {{selectInput transactionTypes transactionTypeId "transaction_type_id"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
{{#isPurchaseOrSale}}
    <div class="row">
      <div class="form-group col-md-6">
        <label for="date" class="col-sm-4 col-md-4 control-label">Date</label>
        <div class="col-sm-10 col-md-4">
          {{datePickerInput date "date"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
      <div class="form-group col-md-6">
        <label for="quantity" class="col-sm-4 col-md-4 control-label">Quantity</label>
        <div class="col-sm-4 col-md-4">
          {{textInput quantity "quantity"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="notes" class="col-sm-4 col-md-4 control-label">Notes</label>
        <div class="col-sm-8 col-md-8">
          {{textInput notes "notes"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
      <div class="form-group col-md-6">
        <label for="unit_price" class="col-sm-4 col-md-4 control-label">Unit Price</label>
        <div class="col-sm-10 col-md-6">
          {{moneyInput unit_price "unit_price"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
{{/isPurchaseOrSale}}
{{#isPriceUpdate}}
    <div class="row">
      <div class="form-group col-md-6">
        <label for="date" class="col-sm-4 col-md-4 control-label">Date</label>
        <div class="col-sm-10 col-md-4">
          {{datePickerInput date "date"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="notes" class="col-sm-4 col-md-4 control-label">Notes</label>
        <div class="col-sm-8 col-md-8">
          {{textInput notes "notes"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
      <div class="form-group col-md-6">
        <label for="unit_price" class="col-sm-4 col-md-4 control-label">Unit Price</label>
        <div class="col-sm-10 col-md-6">
          {{moneyInput unit_price "unit_price"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
{{/isPriceUpdate}}
{{#isDividend}}
    <div class="row">
      <div class="form-group col-md-6">
        <label for="date" class="col-sm-4 col-md-4 control-label">Date</label>
        <div class="col-sm-10 col-md-4">
          {{datePickerInput date "date"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <label for="notes" class="col-sm-4 col-md-4 control-label">Notes</label>
        <div class="col-sm-8 col-md-8">
          {{textInput notes "notes"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
      <div class="form-group col-md-6">
        <label for="amount" class="col-sm-4 col-md-4 control-label">Amount</label>
        <div class="col-sm-10 col-md-6">
          {{moneyInput amount "amount"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
{{/isDividend}}
  </div>
  {{> error_alert }}
  <div class='form-footer'>
    {{saveButton}}
    {{cancelButton}}
    <div class='pull-right'>
      {{#allowDelete}}{{deleteButton}}{{/allowDelete}}
    </div>
  </div>
</td>