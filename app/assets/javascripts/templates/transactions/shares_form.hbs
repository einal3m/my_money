<td colspan="7">
  <div class="form-horizontal">
    <div class="row">
      <div class="form-group col-md-6">
        <label for="transaction_type_id" class="col-sm-4 col-md-4 control-label">Transaction Type</label>
        <div class="col-sm-10 col-md-4">
          {{selectInput transactionTypes transaction_type_id "transaction_type_id"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="amount" class="col-sm-4 col-md-4 control-label">Amount</label>
        <div class="col-sm-10 col-md-6">
          {{moneyInput amount "amount"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
      <div class="form-group col-md-6">
        <label for="subcategory_id" class="col-sm-4 col-md-4 control-label">Subcategory</label>
        <div class="col-sm-10 col-md-6">
          {{selectInputWithUnassigned subcategories subcategory_id "subcategory_id"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="notes" class="col-sm-4 col-md-4 control-label">Notes</label>
        <div class="col-sm-8 col-md-8">
          {{textInput notes "notes"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
  </div>
  <div class='form-footer'>
    {{saveButton}}
    {{cancelButton}}
    <div class='pull-right'>
      {{#allowDelete}}{{deleteButton}}{{/allowDelete}}
    </div>
    <div class='pull-right'>
      <span class="help-block hidden"></span>
    </div>
  </div>
</td>