<div class="form-horizontal">
  <div class="row">
    <div class="form-group col-md-6">
      <label for="date" class="col-sm-4 col-md-4 control-label">Date</label>
      <div class="col-sm-10 col-md-4">
        {{datePickerInput transaction.date "date"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-6">
      <label for="category_id" class="col-sm-4 col-md-4 control-label">Category</label>
      <div class="col-sm-10 col-md-6">
        <div class="input-group">
          {{selectGroupedInput categoryTypes 'category_type_id' categories transaction.category_id "category_id"}}
        </div>
        <span class="help-block hidden"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <label for="amount" class="col-sm-4 col-md-4 control-label">Amount</label>
      <div class="col-sm-10 col-md-6">
        <div class="input-group">
          {{moneyInput transaction.amount "amount"}}
        </div>
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-6">
      <label for="subcategory_id" class="col-sm-4 col-md-4 control-label">Subcategory</label>
      <div class="col-sm-10 col-md-6">
        <div class="input-group">
          {{selectInput subcategories transaction.subcategory_id "subcategory_id"}}
        </div>
        <span class="help-block hidden"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12">
      <label for="notes" class="col-sm-2 col-md-2 control-label">Notes</label>
      <div class="col-sm-10 col-md-10">
        <div class="input-group">
          {{textInput transaction.notes "notes"}}
        </div>
        <span class="help-block hidden"></span>
      </div>
    </div>
  </div>
</div>
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>