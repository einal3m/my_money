<div class="form-horizontal">
  <h4>New Share Account</h4>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="ticker" class="col-sm-2 col-md-4 control-label">Ticker</label>
        <div class="col-sm-10 col-md-6">
          {{textInput ticker "ticker"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="name" class="col-sm-2 col-md-4 control-label">Name</label>
        <div class="col-sm-10 col-md-6">
          {{textInput name "name"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>