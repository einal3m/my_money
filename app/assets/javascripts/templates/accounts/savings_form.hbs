<div class="form-horizontal">
  <h4>New Savings Account</h4>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="name" class="col-sm-2 col-md-4 control-label">Name</label>
        <div class="col-sm-10 col-md-6">
          {{textInput name "name"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="starting_date" class="col-sm-2 col-md-4 control-label">Opening Date</label>
        <div class="col-sm-8 col-md-4">
          {{datePickerInput starting_date "starting_date"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
  </div>  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="bank" class="col-sm-2 col-md-4 control-label">Bank</label>
        <div class="col-sm-10 col-md-6">
          {{textInput bank "bank"}}
          <span class="help-block hidden"></span>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="starting_balance" class="col-sm-2 col-md-4 control-label">Opening Balance</label>
        <div class="col-sm-10 col-md-6">
          <div class="input-group">
            {{moneyInput starting_balance "starting_balance"}}
          </div>
          <span class="help-block hidden"></span>
        </div>
      </div>  
    </div>
  </div>  
</div>
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>