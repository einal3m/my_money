<h4>Account Details</h4>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 col-md-4 control-label">Account</label>
    <div class="col-sm-10 col-md-4">
      <p class="form-control-static">{{name}}</p>
    </div>
  </div>
  <div class="form-group">
    <label for="bank" class="col-sm-2 col-md-4 control-label">Bank</label>
    <div class="col-sm-10 col-md-4">
      <p class="form-control-static">{{bank}}</p>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_date" class="col-sm-2 col-md-4 control-label">Opening Date</label>
    <div class="col-sm-10 col-md-4">
      <p class="form-control-static">{{dateFormatter starting_date}}</p>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_balance" class="col-sm-2 col-md-4 control-label">Opening Balance</label>
    <div class="col-sm-10 col-md-6">
      <p class="form-control-static">{{accountingFormat starting_balance}}</p>
    </div>
  </div>
</div>
<div class="form-footer">
  {{editButton}}
</div>
