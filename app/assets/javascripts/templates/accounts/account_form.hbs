<div class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-2 col-md-4 control-label">Name</label>
    <div class="col-sm-10 col-md-6">
      {{textInput account.name "name"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="bank" class="col-sm-2 col-md-4 control-label">Bank</label>
    <div class="col-sm-10 col-md-6">
      {{textInput account.bank "bank"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_date" class="col-sm-2 col-md-4 control-label">Opening Date</label>
    <div class="col-sm-10 col-md-4">
      {{datePickerInput account.starting_date "starting_date"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_balance" class="col-sm-2 col-md-4 control-label">Opening Balance</label>
    <div class="col-sm-10 col-md-6">
      <div class="input-group">
        {{moneyInput account.starting_balance "starting_balance"}}
      </div>
      <span class="help-block hidden"></span>
    </div>
  </div>  
</div>
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>