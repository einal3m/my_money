
<h4>Edit Account Details{{deleteButton}}</h4>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 col-md-4 control-label">Account</label>
    <div class="col-sm-10 col-md-4">
      <input type="text" name="name" id="name" value="{{name}}" >
    </div>
  </div>
  <div class="form-group">
    <label for="bank" class="col-sm-2 col-md-4 control-label">Bank</label>
    <div class="col-sm-10 col-md-4">
      <input type="text" name="bank" id="bank" value="{{bank}}" >
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_date" class="col-sm-2 col-md-4 control-label">Opening Date</label>
    <div class="col-sm-10 col-md-4">
      {{datePickerInput starting_date "starting_date"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="starting_balance" class="col-sm-2 col-md-4 control-label">Opening Balance</label>
    <div class="col-sm-10 col-md-6">
      <div class="input-group">
        {{moneyInput starting_balance "starting_balance"}}
      </div>
      <span class="help-block hidden"></span>
    </div>
  </div>
</div>
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>
