<td colspan="4">
  <h4>Edit Pattern {{#allowDelete}}{{deleteButton}}{{/allowDelete}}</h4>
  <div class="form-horizontal">
  <div class="row">
    <div class="form-group col-md-8">
      <label for="match_text" class="col-sm-2 col-md-2 control-label">Match Text</label>
      <div class="col-sm-10 col-md-10">
        {{textInput pattern.match_text "match_text"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-4">
      <label for="category_id" class="col-sm-4 col-md-4 control-label">Category</label>
      <div class="col-sm-10 col-md-6">
        {{selectGroupedInput categoryTypes 'category_type_id' categories pattern.category_id "category_id"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <label for="notes" class="col-sm-2 col-md-2 control-label">Notes</label>
      <div class="col-sm-10 col-md-10">
        {{textInput pattern.notes "notes"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-6">
      <label for="subcategory_id" class="col-sm-4 col-md-4 control-label">Subcategory</label>
      <div class="col-sm-10 col-md-6">
        {{selectInputWithUnassigned subcategories pattern.subcategory_id "subcategory_id"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
  </div>
</div>
{{> error_alert }}
<div class="form-footer">
  {{saveButton}}
  {{cancelButton}}
</div>
</td>