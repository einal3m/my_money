<h4><span class="text-info">Step 1 of 2</span> - Enter Statement Details</h4>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 col-md-2 control-label">Account</label>
    <div class="col-sm-10 col-md-2">
      <p class="form-control-static">{{account.name}}</p>
    </div>
  </div>
  <div class="form-group">
    <label for="statement_date" class="col-sm-2 col-md-2 control-label">Statement Date</label>
    <div class="col-sm-10 col-md-2">
      {{datePickerInput reconciliation.statement_date "statement_date"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="statement_balance" class="col-sm-2 col-md-2 control-label">Balance</label>
    <div class="col-sm-10 col-md-3">
      <div class="input-group">
        {{moneyInput reconciliation.statement_balance "statement_balance"}}
      </div>
      <span class="help-block hidden"></span>
    </div>
  </div>
</div>
<div class="form-footer">
  {{actionButton text="Start" id="reconcile"}}
  {{cancelButton}}
</div>