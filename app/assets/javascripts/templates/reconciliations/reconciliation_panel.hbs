<h4><span class="text-info">Step 2 of 2</span> - Select Transactions</h4>

<div class="form-horizontal">
	<div class="row">
	  <div class="form-group col-md-6">
	    <label class="col-sm-2 col-md-4 control-label">Account</label>
	    <div class="col-sm-10 col-md-4">
	      <p class="form-control-static">{{account.name}}</p>
	    </div>
	  </div>
	</div>

	<div class="row">
	  <div class="form-group col-md-6">
	    <label for="statement_date" class="col-sm-2 col-md-4  control-label">Statement Date</label>
	    <div class="col-sm-10 col-md-4">
	      <p class="form-control-static">{{dateFormatter reconciliation.statement_date}}</p>
	    </div>
	  </div>
	  <div class="form-group col-md-6">
	    <label for="reconciliation_balance" class="col-sm-2 col-md-6  control-label">Reconciliation Balance</label>
	    <div class="col-sm-10 col-md-4">
	      <p class="form-control-static">{{accountingFormat reconciliation_balance}}</p>
	    </div>
	  </div>
	</div>

	<div class="row">
	  <div class="form-group col-md-6">
	    <label for="statement_balance" class="col-sm-2 col-md-4  control-label">Balance</label>
	    <div class="col-sm-10 col-md-4">
	      <p class="form-control-static">{{accountingFormat reconciliation.statement_balance}}</p>
	    </div>
	  </div>
	  <div class="form-group col-md-6">
	    <label for="balance_difference" class="col-sm-2 col-md-6  control-label">Difference</label>
	    <div class="col-sm-10 col-md-4">
	      <p class="form-control-static">{{accountingFormat balance_difference}}</p>
	    </div>
	  </div>
	</div>
</div>

<div class="form-footer">
  {{actionButton text="Done" id="done"}}
  {{cancelButton}}
</div>


