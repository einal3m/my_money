<div class="form-horizontal">
  <div class="row">
    <div class="form-group col-md-4">
      <label for="account_id" class="col-sm-4 col-md-4 control-label">Account</label>
      <div class="col-sm-8 col-md-8">
        {{selectInput accounts.models account.id "account_id"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-3">
      <label for="from_date" class="col-sm-4 col-md-4 control-label">From</label>
      <div class="col-sm-8 col-md-8">
        {{datePickerInput transaction.date "from_date"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-3">
      <label for="to_date" class="col-sm-4 col-md-4 control-label">To</label>
      <div class="col-sm-8 col-md-8">
        {{datePickerInput transaction.date "to_date"}}
        <span class="help-block hidden"></span>
      </div>
    </div>
    <div class="form-group col-md-2 pull-right">
      {{actionButton text='Update' id='update' icon='fa-search'}}
    </div>
  </div>
</div>