<div class="form-horizontal">
  <div class="form-group">
    <label for="category_id" class="col-sm-2 col-md-4 control-label">Income/Expense</label>
    <div class="col-sm-10 col-md-6">
      {{selectInput categoryTypes.models category.category_type_id "category_type_id"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 col-md-4 control-label">Name</label>
    <div class="col-sm-10 col-md-6">
      {{textInput category.name "name"}}
      <span class="help-block hidden"></span>
    </div>
  </div>
</div>
<div class='form-footer'>
  {{saveButton}}
  {{cancelButton}}
  <div class='pull-right'>
    {{deleteButton}}
  </div>
  <div class='pull-right'>
    <span class="help-block hidden"></span>
  </div>
</div>