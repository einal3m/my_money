<div class="panel panel-default">

  <div class="panel-heading">  	
  	<h4><%= yield(:title) %> for Category: <%= @subcategory.category.name %>
  		<% if yield(:title).include?("Edit") %>
  			<%= link_to 'Delete', @subcategory, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
  		<% end %>
  	</h4>
  </div>
  
<%= form_for(@subcategory) do |f| %>

  <div class="container">
    <% if @subcategory.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>

        <ul>
          <% @subcategory.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  	<div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
      <%= f.hidden_field :category_id %>
  	</div>

  </div><!-- container -->
  
  <div class="panel-footer">
  	<button type="submit" class="btn btn-default">Save</button>
  	<%= link_to "Cancel", categories_path, class: "btn btn-default" %>
  </div>

<% end %>
  
</div> <!-- panel -->
