<h1>Accounts <%= link_to content_tag(:span, "New", class: "glyphicon glyphicon-plus"), new_account_path, class: "btn btn-default" %></h1>
<p id="notice"><%= notice %></p>

  <div class="panel panel-default">
  
    <div class="panel-heading">
      <h4>Account Summary</h4>
    </div>
    
	<table class="table">
  	  <thead>
    	<tr>
          <th>Name</th>
          <th>Bank</th>
          <th class="money">Starting balance</th>
          <th></th>
        </tr>
  	  </thead>

  	  <tbody>
    	<% @accounts.each do |account| %>
      	<tr>
          <td><%= account.name %></td>
          <td><%= account.bank %></td>
          <td class="money"><%= number_to_currency(account.starting_balance) %></td>
          <td class="links"><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-edit"), edit_account_path(account) %></td>
        </tr>
        <% end %>
  	  </tbody>
	</table>
	
  </div> <!-- end panel-->

<br>
